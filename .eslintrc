{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "prettier"
  ],
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "root": true,
  "rules": {
    "@typescript-eslint/ban-ts-comment": "off",
    "@typescript-eslint/no-explicit-any": [
      "off",
      {
        "ignoreRestArgs": true
      }
    ],
    "import/no-named-as-default": 0,
    "react/prop-types": 0,
    "camelcase": 2,
    "no-console": 0,
    "react/react-in-jsx-scope": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ],
    "class-methods-use-this": "off"
  },
  "overrides": [
    {
      "files": [
        "**/*.ts?(x)",
        "**/*.spec.js",
        "**/*.spec.jsx"
      ],
      "env": {
        "jest": true
      },
      "rules": {
        "prettier/prettier": [
          "warn",
          {
            "tabWidth": 2,
            "semi": false,
            "singleQuote": true,
            "bracketSpacing": true,
            "trailingComma": "none",
            "arrowParens": "avoid"
          }
        ]
      }
    },
    {
      "files": [
        "**/*.json"
      ],
      "rules": {
        "prettier/prettier": [
          "warn"
        ],
        "@typescript-eslint/no-unused-expressions": "off"
      }
    }
  ]
}
